        "# translations",
        "curl -L -o \"$dir\\explorer++_translations.zip\" \"https://ci.appveyor.com/api/projects/derceg/explorerplusplus/artifacts/explorerpp_translations.zip?branch=master&job=Platform%3A%20Win32\"",
